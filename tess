 local ScreenGui = Instance.new("ScreenGui")
    local ImageButton = Instance.new("ImageButton")

    ScreenGui.Name = "VanishedMobileToggle"
    ScreenGui.Parent = game:GetService("CoreGui") -- Agar tidak hilang saat reset karakter
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    ImageButton.Parent = ScreenGui
    ImageButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ImageButton.BorderSizePixel = 0
    ImageButton.Position = UDim2.new(0.1, 0, 0.15, 0) -- Posisi tombol di layar
    ImageButton.Size = UDim2.new(0, 45, 0, 45) -- Ukuran box tombol
    ImageButton.Image = "rbxassetid://85002796312935" -- Icon Box/Menu
    ImageButton.Draggable = true -- Supaya tombol bisa digeser-geser di HP

    -- Efek Bulat (Rounded Corner)
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 10)
    UICorner.Parent = ImageButton

    -- Efek Border Cantik
    local UIStroke = Instance.new("UIStroke")
    UIStroke.Color = Color3.fromRGB(255, 255, 255)
    UIStroke.Thickness = 2
    UIStroke.ApplyStrokeMode = Enum.UIStrokeMode.Border
    UIStroke.Parent = ImageButton

    
